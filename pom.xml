<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>org.hawkular.services</groupId>
  <artifactId>hawkular-services</artifactId>
  <version>1.0.0.Final-SNAPSHOT</version>
  <packaging>pom</packaging>

  <name>Hawkular Services</name>
  <description>Hawkular Services: Inventory, Command Gateway and Commons</description>
  <url>http://github.com/hawkular-services</url>
  <inceptionYear>2017</inceptionYear>
  <organization>
    <name>Red Hat</name>
    <url>http://www.redhat.com/</url>
  </organization>
  <licenses>
    <license>
      <name>The Apache Software License, Version 2.0</name>
      <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
      <distribution>repo</distribution>
    </license>
  </licenses>

  <modules>

    <module>commons</module>
    <module>dist</module>
    <module>inventory-model</module>
    <module>inventory-api</module>
    <module>inventory-service</module>
    <module>rest-handlers</module>
    <!--


    <module>hawkular-status</module>
    <module>docker-dist</module>
    -->
  </modules>

  <scm>
    <connection>scm:git:git@github.com:hawkular/hawkular-services.git</connection>
    <developerConnection>scm:git:git@github.com:hawkular/hawkular-services.git</developerConnection>
    <url>https://github.com/hawkular-services</url>
    <tag>HEAD</tag>
  </scm>
  <issueManagement>
    <system>jira</system>
    <url>https://issues.jboss.org/browse/HAWKULAR</url>
  </issueManagement>

  <properties>
    <distribution.name>hawkular-services</distribution.name>
    <maven.compiler.source>1.8</maven.compiler.source>
    <maven.compiler.target>1.8</maven.compiler.target>
    <version.com.fasterxml.jackson>2.5.4</version.com.fasterxml.jackson>
    <version.io.vertx>3.4.1</version.io.vertx>
    <version.junit>4.12</version.junit>
    <version.org.apache.logging.log4j>2.8.1</version.org.apache.logging.log4j>
    <version.org.apache.maven.plugins.maven-jar-plugin>3.0.2</version.org.apache.maven.plugins.maven-jar-plugin>
    <version.org.apache.maven.plugins.maven-resources-plugin>3.0.2</version.org.apache.maven.plugins.maven-resources-plugin>
    <version.org.assertj>3.6.1</version.org.assertj>
    <version.org.codehaus.buildnumber-maven-plugin>1.3</version.org.codehaus.buildnumber-maven-plugin>
    <version.org.codehaus.gmaven.groovy-maven-plugin>2.0</version.org.codehaus.gmaven.groovy-maven-plugin>
    <version.org.codehaus.groovy>2.4.10</version.org.codehaus.groovy>
    <version.org.hawkular.commons>0.9.7.Final</version.org.hawkular.commons>
    <hawkular.rest.user /><!-- empty in the default profile, set only in the dev profile -->
    <hawkular.rest.password /><!-- empty in the default profile, set only in the dev profile -->
  </properties>

  <profiles>
    <profile>
      <!-- A profile to build a development distro -->
      <id>dev</id>
      <properties>
        <hawkular.agent.enabled>true</hawkular.agent.enabled>
        <hawkular.rest.user>jdoe</hawkular.rest.user>
        <hawkular.rest.password>password</hawkular.rest.password>
      </properties>
    </profile>
  </profiles>

</project>
